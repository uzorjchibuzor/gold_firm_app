<div class="relative overflow-x-auto shadow-md sm:rounded-lg mx-auto text-center">
  <h3 class="text-blue-400 mb-5">
    Below are the school years currently in the system.
  </h3>
  <table class="w-full text-sm text-center rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark-bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">S/N</th>
        <th scope="col" class="px-6 py-3">Title</th>
          <th scope="col" class="px-6 py-3">Start Year</th>
          <th scope="col" class="px-6 py-3">End Year</th>
          <th scope="col" class="px-6 py-3">Number of Students Enrolled</th>
      </tr>
    </thead>
    <tbody>
      <% @school_years.each_with_index do |school_year, index| %>
        <tr class="odd:bg:white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
          <th scope="row" class="px-6 py-4"><%= index + 1 %></th>
          <th class="px-6 py-4"><%= school_year.title %></th>
          <th class="px-6 py-4"><%= school_year.start_year %></th>
          <th class="px-6 py-4"><%= school_year.end_year %></th>
          <th class="px-6 py-4"><%= school_year.grade_levels.flat_map {|grade_level|grade_level.users.count}.sum %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
