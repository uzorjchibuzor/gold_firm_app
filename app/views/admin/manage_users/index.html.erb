<div class="relative overflow-x-auto shadow-md sm:rounded-lg mx-auto text-center">
  <%= link_to "Create User", new_admin_manage_user_path, class: "py-3 md:py-6 font-medium text-blue-600 hover:text-blue-500 focus:outline-hidden focus:text-gray-500 dark:text-neutral-400 dark:hover:text-neutral-500 dark:focus:text-neutral-500"%>
  <h3 class="text-blue-400">
    You may click on the user you want to manage from the table below.
  </h3>
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark-bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">Registration Number</th>
        <th scope="col" class="px-6 py-3">Name</th>
        <th scope="col" class="px-6 py-3">Class</th>
        <th scope="col" class="px-6 py-3">Status</th>
        <th scope="col" class="px-6 py-3">Action</th>
      </tr>
    </thead>
     <tbody>
      <% @users.each do |user| %>
        <tr class="odd:bg:white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
          <th scope="row" class="px-6 py-4"><%= user.id %></th>
          <th class="px-6 py-4"><%= link_to user.full_name, "/users/#{user.id}" %></th>
          <th class="px-6 py-4"> <%= user&.current_class %> </th>
          <th class="px-6 py-4"><%= user&.role.titleize %></th>
          <th class="px-6 py-4">
            <%= link_to "Edit", edit_admin_manage_user_path(user) %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
